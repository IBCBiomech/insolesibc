<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:insolesMVVM.ViewModels"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="insolesMVVM.Views.ToolBar">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:ToolBarViewModel/>
	</Design.DataContext>
	<StackPanel Orientation="Horizontal" VerticalAlignment="Top">
		<Button Command="{Binding ScanCommand}">
			<TextBlock Text="Scan" />
		</Button>
		<Button Command="{Binding ConnectCommand}">
			<TextBlock Text="Connect" />
		</Button>
		<Button Command="{Binding OpenCameraCommand}">
			<TextBlock Text="Open Camera" />
		</Button>
		<Button Command="{Binding RecordCommand}">
			<TextBlock Text="Record" />
		</Button>
	</StackPanel>
</UserControl>
