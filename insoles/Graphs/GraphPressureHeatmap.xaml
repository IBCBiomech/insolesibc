<Page x:Class="insoles.Graphs.GraphPressureHeatmap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:insoles.Graphs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphPressureHeatmap">

    <Grid>
        <WpfPlot  x:Name="plot"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"
                   Visibility="{Binding calculating_visibility}" Text="Calculating..."/>
    </Grid>
</Page>
