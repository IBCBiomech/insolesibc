<Page x:Class="insoles.Graphs.GraphsCP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:insoles.Graphs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphsCP">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WpfPlot Grid.Column="0" Grid.Row="0" x:Name="plotLeftX" Margin="0 0 0 5"/>
        <WpfPlot Grid.Column="0" Grid.Row="1" x:Name="plotLeftY" Margin="0 5 0 0"/>
        <WpfPlot Grid.Column="1" Grid.Row="0" x:Name="plotRightX" Margin="0 0 0 5"/>
        <WpfPlot Grid.Column="1" Grid.Row="1" x:Name="plotRightY" Margin="0 5 0 0"/>
    </Grid>
</Page>
