<UserControl x:Class="insoles.UserControls.GRF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:insoles.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WpfPlot x:Name="plot" Grid.Row="0"/>
        <ComboBox HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" ItemsSource="{Binding units}"
          SelectedItem="{Binding selectedUnits, Mode=TwoWay}"
          DisplayMemberPath="." />
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Width="50" >
            <Button x:Name="StdDevButton1" Content="STDDEV" Click="StdDevButton1_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
