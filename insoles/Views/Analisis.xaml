<UserControl x:Class="insoles.View.Analisis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dock="https://github.com/Dirkster99/AvalonDock"
             xmlns:local="clr-namespace:insoles.View"
             xmlns:userControls="clr-namespace:insoles.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <dock:DockingManager>
            <dock:LayoutRoot>
                <dock:LayoutPanel>
                    <dock:LayoutAnchorablePaneGroup Orientation="Vertical">
                        <dock:LayoutAnchorablePaneGroup Orientation="Horizontal">
                            <dock:LayoutAnchorablePane>
                                <dock:LayoutAnchorable Title="GRF" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                    <ContentControl Content="{Binding grf}"/>
                                </dock:LayoutAnchorable>
                            </dock:LayoutAnchorablePane>
                            <dock:LayoutAnchorablePane>
                                <dock:LayoutAnchorable Title="Cam1" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                    <ContentControl Content="{Binding camaraViewport1}"/>
                                </dock:LayoutAnchorable>
                                <dock:LayoutAnchorable Title="Cam2" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                    <ContentControl Content="{Binding camaraViewport2}"/>
                                </dock:LayoutAnchorable>
                            </dock:LayoutAnchorablePane>
                        </dock:LayoutAnchorablePaneGroup>
                        <dock:LayoutAnchorablePaneGroup Orientation="Horizontal">
                            <dock:LayoutAnchorablePane>
                                <dock:LayoutAnchorable Title="Butterfly" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                    <ContentControl Content="{Binding grafoMariposa}"/>
                                </dock:LayoutAnchorable>
                            </dock:LayoutAnchorablePane>
                            <dock:LayoutAnchorablePane>
                                <dock:LayoutAnchorable Title="Pressure map" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                    <ContentControl Content="{Binding heatmap}"/>
                                </dock:LayoutAnchorable>
                            </dock:LayoutAnchorablePane>
                        </dock:LayoutAnchorablePaneGroup>
                        <dock:LayoutAnchorablePane>
                            <dock:LayoutAnchorable Title="Sujetos" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                <userControls:PacientesUserControlAnalisis Pacientes="{Binding Pacientes}"/>
                            </dock:LayoutAnchorable>
                            <dock:LayoutAnchorable Title="Timeline" CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                                <ContentControl Content="{Binding timeLine}"/>
                            </dock:LayoutAnchorable>
                        </dock:LayoutAnchorablePane>
                    </dock:LayoutAnchorablePaneGroup>
                </dock:LayoutPanel>
            </dock:LayoutRoot>
        </dock:DockingManager>
    </Grid>
</UserControl>
