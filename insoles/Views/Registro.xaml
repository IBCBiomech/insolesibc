<UserControl x:Class="insoles.View.Registro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Menu="clr-namespace:insoles.Utilities"
             xmlns:local="clr-namespace:insoles.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <!-- Scan -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ScanCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Scan"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
            <!-- Connect -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding CaptureCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Capture"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Insoles.DefaultView}"/>
            <DataGrid x:Name="cameras" AutoGenerateColumns="True" 
                          ItemsSource="{Binding Cameras.DefaultView}">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open" Command="{Binding OpenCameraCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}, Path=DataContext}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <WpfPlot Name="plot"/>
        </StackPanel>
        <ContentControl Content="{Binding Plot}"  Grid.Row="2"/>
        <Image Source="{Binding CurrentFrame}" Stretch="Uniform" Grid.Row="3"/>
    </Grid>
</UserControl>
