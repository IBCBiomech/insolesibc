<UserControl x:Class="insoles.View.Registro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Menu="clr-namespace:insoles.Utilities"
             xmlns:local="clr-namespace:insoles.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <!-- Scan -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ScanCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Scan"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
            <!-- Connect -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding CaptureCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Capture"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
            <!-- Record -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding RecordCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Record"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
            <!-- Stop -->
            <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding StopCommand}"
                              IsChecked="True">

                <Grid>

                    <Image Source="Images/capture-icon.png"
                                   Style="{StaticResource Image_Style}" />

                    <TextBlock Text="Stop"
                                       Style="{StaticResource Text_Style}" />

                </Grid>

            </Menu:Btn>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <ListView ItemsSource="{Binding Insoles}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Connect" Command="{Binding VM.ConnectCommand}"
                                      CommandParameter="{Binding}"/>
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding id}" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" />
                        <GridViewColumn Header="MAC" DisplayMemberBinding="{Binding MAC}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView ItemsSource="{Binding Cameras}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Open" Command="{Binding VM.OpenCameraCommand}"
                                      CommandParameter="{Binding}"/>
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Number" DisplayMemberBinding="{Binding number}" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" />
                        <GridViewColumn Header="Fps" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding Path=fpsAvailable}"
                                              SelectedValue="{Binding Path=fps}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <WpfPlot Name="plot"/>
        </StackPanel>
        <ContentControl Content="{Binding Plot}"  Grid.Row="2"/>
        <Image Source="{Binding CurrentFrame}" Stretch="Uniform" Grid.Row="3"/>
    </Grid>
</UserControl>
