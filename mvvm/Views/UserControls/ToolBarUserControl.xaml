<UserControl x:Class="mvvm.Views.UserControls.ToolBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mvvm.Views.UserControls"
             xmlns:pages="clr-namespace:mvvm.Views.Pages"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance pages:SettingsPage,
                                     IsDesignTimeCreatable=False}"
            d:DesignHeight="40" d:DesignWidth="800"
            d:Background="{DynamicResource ApplicationBackgroundBrush}"
            Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <DockPanel>
        <Button Content="Scan"
            Command="{Binding ViewModel.ScanCommand, Mode=OneWay}"
        />
        <Button Content="Connect"
            Command="{Binding ViewModel.ConnectCommand, Mode=OneWay}"
        />
        <Button Content="Open Camera"
            Command="{Binding ViewModel.OpenCameraCommand, Mode=OneWay}"
        />
    </DockPanel>
</UserControl>
